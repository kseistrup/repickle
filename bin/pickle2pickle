import sys
import os
import pathlib
import logging
import argparse
import pickle

try:
    from locale import (Error, setlocale, LC_ALL)
    _ = setlocale(LC_ALL, '')
except (ImportError, NameError, Error):
    pass

__author__ = 'Klaus Alexander Seistrup <klaus@seistrup.dk>'
__revision__ = '2016-02-07'
__version__ = '0.1.0 ({})'.format(__revision__)
__copyright__ = """\
pickle2pickle {}
Copyright © 2014-16 Klaus Alexander Seistrup <klaus@seistrup.dk>

This is free software; see the source for copying conditions.  There is no
warranty; not even for merchantability or fitness for a particular purpose.\
""".format(__version__)

DEBUG = os.environ.get('DEBUG', 'False')[0].upper() in '1JTY'  # 1/Ja/True/Yes
MYLOG = logging.getLogger('pickle2pickle')


class Config(dict):
    """Simple dot-dict implementation"""
    def __getattr__(self, attr):
        return self.get(attr, None)
    __setattr__ = dict.__setitem__
    __delattr__ = dict.__delitem__


def die(message=None):
    """ Exit gracefully"""
    if message:
        MYLOG.error(message)
    sys.exit(1 if message else 0)


def pickle2pickle(config):
    """Convert pickle to pickle"""
    if sys.stdout.isatty() and not config.force:
        die('Use ‘--force’ if you really wish to write binary data to a TTY.')
    try:
        with open('/dev/stdin', 'rb') as stdin:
            with open('/dev/stdout', 'wb') as stdout:
                pickle.dump(pickle.load(stdin), stdout)
    except IOError as err:
        die(str(err))


def main(progname='pickle2pickle'):
    """Main entry point"""

    parser = argparse.ArgumentParser(
        prog=progname,
        formatter_class=argparse.RawTextHelpFormatter
    )
    parser.add_argument('-v', '--version', action='version',
                        version='%(prog)s/{}'.format(__version__),
                        help='show version information and exit')
    parser.add_argument('-c', '--copyright', action='version',
                        version=__copyright__,
                        help='show copying policy and exit')
    parser.add_argument('-f', '--force', action='store_true',
                        help='write to standard output even if data is binary')

    args = parser.parse_args()

    config = Config()
    config.force = args.force

    pickle2pickle(config)

    return 0

if __name__ == '__main__':
    sys.exit(main(pathlib.Path(sys.argv[0]).name))

# eof
