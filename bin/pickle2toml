import sys
import os
import pathlib
import logging
import argparse
import pickle

try:
    from locale import (Error, setlocale, LC_ALL)
    _ = setlocale(LC_ALL, '')
except (ImportError, NameError, Error):
    pass

try:
    import pytoml
except ImportError as error:
    print(str(error), file=sys.stderr)
    sys.exit(1)

__author__ = 'Klaus Alexander Seistrup <klaus@seistrup.dk>'
__revision__ = '2016-02-08'
__version__ = '0.1.0 ({})'.format(__revision__)
__copyright__ = """\
pickle2toml {}
Copyright Â© 2014-16 Klaus Alexander Seistrup <klaus@seistrup.dk>

This is free software; see the source for copying conditions.  There is no
warranty; not even for merchantability or fitness for a particular purpose.\
""".format(__version__)

DEBUG = os.environ.get('DEBUG', 'False')[0].upper() in '1JTY'  # 1/Ja/True/Yes
MYLOG = logging.getLogger('pickle2toml')


class Config(dict):
    """Simple dot-dict implementation"""
    def __getattr__(self, attr):
        return self.get(attr, None)
    __setattr__ = dict.__setitem__
    __delattr__ = dict.__delitem__


def die(message=None):
    """ Exit gracefully"""
    if message:
        MYLOG.error(message)
    sys.exit(1 if message else 0)


def pickle2toml(config):
    """Convert pickle to TOML"""
    try:
        with open('/dev/stdin', 'rb') as stdin:
            data = pytoml.dumps(
                pickle.load(stdin),
                sort_keys=config.sort
            ).rstrip()
        if (sys.stdout.isatty() or config.force) and config.highlight:
            try:
                from pygments import highlight
                # from pygments.lexers import TomlLexer
                from pygments import lexers
                # Has pygments got a TOML lexer yet? (#1150)
                lexer = lexers.find_lexer_class('TOML')
                if lexer is None:
                    # No, so let's use an INI lexer while we're waiting
                    lexer = lexers.find_lexer_class('INI')
                from pygments.formatters import TerminalFormatter
                highlight(
                    data,
                    lexer(),
                    TerminalFormatter(style='native'),
                    outfile=sys.stdout
                )
            except ImportError:
                print(data)
        else:
            print(data)
    except IOError as err:
        die(str(err))


def main(progname='pickle2toml'):
    """Main entry point"""

    parser = argparse.ArgumentParser(
        prog=progname,
        formatter_class=argparse.RawTextHelpFormatter
    )
    parser.add_argument('-v', '--version', action='version',
                        version='%(prog)s/{}'.format(__version__),
                        help='show version information and exit')
    parser.add_argument('-c', '--copyright', action='version',
                        version=__copyright__,
                        help='show copying policy and exit')
    parser.add_argument('-S', '--no-sort', action='store_true',
                        help='do not sort keys')
    parser.add_argument('-H', '--no-highlight', action='store_true',
                        help='do not use syntax highlighting')
    parser.add_argument('-f', '--force', action='store_true',
                        help='use syntax highlighting even if not on a TTY')

    args = parser.parse_args()

    config = Config()
    config.force = args.force
    config.sort = not args.no_sort
    config.highlight = not args.no_highlight

    pickle2toml(config)

    return 0

if __name__ == '__main__':
    sys.exit(main(pathlib.Path(sys.argv[0]).name))

# eof
